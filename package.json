{
  "name": "concord",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "prettier --write ./packages/**/*.{js,ts}",
    "concord": "yarn workspace @edixon/concord",
    "testbot": "yarn workspace testbot",
    "dev": "nodemon --config",
    "build": "node ./build"
  },
  "nodemonConfig": {
    "ext": ".ts,.js",
    "watch": [
      "packages/*"
    ],
    "verbose": false,
    "exec": "yarn concord dev && yarn testbot start",
    "ignore": [
      "node_modules/",
      "dist/"
    ]
  },
  "devDependencies": {
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1"
  },
  "engines": {
    "node": "~16.13.0",
    "yarn": "~1.22.0"
  }
}
