{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ESNext"],
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "removeComments": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "~ENTITIES/*": ["entities/*"],
      "~UTILS/*": ["utils/*"]
    },
    "esModuleInterop": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
